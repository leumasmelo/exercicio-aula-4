let condicao1 = true;

if (condicao1){
    // Como o valor da condição é true,
    //o código desse bloco é executado
    console.log('Entrei no if 1!');
}

let condicao2 = false;

if (condicao2){
    // Como o valor da condição é false,
    // o código desse bloco NÃO é execuitado
    console.log('Entrei no if 2!');
}

